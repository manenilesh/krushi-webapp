pipeline {
    agent { label 'test-agent' }

    stages {

        stage('Clone Repository') {
            steps {
                echo 'ğŸ“¦ Cloning main app repository...'
                git branch: 'main', url: 'https://github.com/manenilesh/krushi-webapp.git'
            }
        }
        
        stage('Build Flask App Image') {
            steps {
                echo 'âš™ï¸ Building Flask app Docker image...'
                sh 'docker build -t nileshmane912/ci-cd:flask-01 .'
            }
        }
        
        stage('Build Nginx Image') {
            steps {
                echo 'âš™ï¸ Building Nginx Docker image...'
                sh '''
                        cd nginx-web
                        docker build -t nileshmane912/ci-cd:nginx-01 .
                        ls -la
                   '''
                }
            }
            
        stage('Push Images to Docker Hub') {
            steps {
                echo 'ğŸš€ Pushing images to Docker Hub...'
                withCredentials([string(credentialsId: 'dockerhub-token', variable: 'TOKEN')]) {
                    sh '''
                        echo $TOKEN | docker login -u nileshmane912 --password-stdin
                        docker push nileshmane912/ci-cd:flask-01
                        docker push nileshmane912/ci-cd:nginx-01
                    '''
                }
            }
        }
        
        stage('Pull Images from Docker Hub') {
            steps {
                echo 'ğŸš€ Pulling images from Docker Hub'
            }
        }
        
        stage('Create container') {
            steps {
                echo 'Creating containers'
                sh 'docker rm -f flask-webapp nginx-webapp'
                sh 'docker run -d --name nginx-webapp -p 80:80 nileshmane912/ci-cd:nginx-01'
                sh 'docker run -d --name flask-webapp -p 5000:5000 nileshmane912/ci-cd:flask-01'
            }
        }
    }
}
